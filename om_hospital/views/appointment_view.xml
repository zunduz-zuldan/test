<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-danger="state =='cancel'" sample="1"
                  multi_edit="1"
                  decoration-warning="state == 'in_consultation'" decoration-info="state == 'draft'">
                <field name="ref" optional="show"/>
                <field name="patient_id"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="gender" optional="hide"/>
                <field name="appointment_time"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"
                       decoration-warning="state == 'in_consultation'"
                       widget='badge'/>
            </tree>
        </field>
    </record>



    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" decoration-danger="state =='cancel'" sample="1"
                  multi_edit="1"
                  decoration-warning="state == 'in_consultation'" decoration-info="state == 'draft'">
                <field name="ref" optional="show"/>
                <field name="patient_id"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="gender" optional="hide"/>
                <field name="appointment_time"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       decoration-danger="state == 'cancel'"
                       decoration-warning="state == 'in_consultation'"
                       widget='badge'/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_in_consultation" string="in Consultation" class="oe_highlight"
                            type="object" states="draft"/>
                    <button name="action_done" string="Mark As Done" class="oe_highlight"
                            data-hotkey="x"
                            type="object" states="in_consultation"/>

<!--                         <button name="%(om_hospital.action_cancel_appointment)d" string="Cancel" data-hotkey="z" class="oe_highlight"-->
<!--                            type="action" states="draft,in_consultation"/>-->

                    <button name="action_cancel" string="Cancel" data-hotkey="z" class="oe_highlight"
                            type="object" states="draft,in_consultation"/>

                    <button name="action_draft" string="Reset To Draft" data-hotkey="r" class="oe_highlight"
                            type="object" states="cancel"/>
                    <!--                  options="  {'clickable':'1'}"-->
                    <field name="state" widget="statusbar" nolabl="1"
                           statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                             <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id" widget="many2one_avatar_user"/>
                            <field name="booking_date" help="Date of booking" default_focus="1"/>
                        </group>
                        <group>
                            <field name="hide_sales_price" groups="base.group_no_one" />
                            <field name="appointment_time"/>
                            <button name="action_test" string="Object Button" type="object"
                                    help="A massage will be printed in the log"
                                  groups="base.group_no_one"
                                    confirm="Are you sure to execute python code ?"
                                    class="oe_highlight"/>
                            <button name="%(om_hospital.action_hospital_patient)d" string="Action Button"
                                    help="On clicking this button,you will be redirected to patient records"
                                    groups="base.group_no_one"
                                    confirm="Are you sure to open the patient action ?"
                                    type="action" class="oe_highlight"/>

                        </group>

                        <notebook>
                            <page string="Prescription" name="prescription">
                                <field name="prescription" placeholder="Enter your prescription"
                                       options="{'collaborative': true, 'resizable':true, 'codeview':true}"/>
                            </page>

                            <page string="pharmacy" name="pharmacy">
                                <field name="pharmacy_line_ids">
                                    <tree editable="top">
                                        <field name="product_id"/>
                                        <field name="price_unit"
                                               attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                        <field name="qty"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit"
                                                   attrs="{'column_invisible':[('parent.hide_sales_price', '=', True)]}"/>
                                            <field name="qty"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
            </search>
        </field>
    </record>


    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment!
            </p>
        </field>
    </record>


    <menuitem id="menu_appointment"
              name="Appointments"
              action="action_hospital_appointment"
              parent="menu_appointment_master"
              sequence="10"/>


</odoo>
